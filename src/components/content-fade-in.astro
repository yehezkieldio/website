<article id="fade-in">
    <slot />
</article>

<script>
    import { animate } from "motion";

    document.addEventListener("astro:page-load", () => {
        const animation = {
            opacity: [0, 1],
            y: [0.2, 0]
        };

        const options = {
            duration: 0.6
        };

        animate("#fade-in", animation, options);
    });
</script>
